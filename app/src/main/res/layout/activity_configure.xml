<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.puttey.pustikins.ziptracker.Configure"
                android:background="@android:color/transparent"
                android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose Widget Color"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textIsSelectable="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blueButton"
        android:layout_marginTop="50dp"
        android:src="@drawable/widget_background_blue_xs"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redButton"
        android:src="@drawable/widget_background_red_xs"
        android:layout_alignTop="@+id/blueButton"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yellowButton"
        android:layout_below="@id/blueButton"
        android:layout_alignRight="@+id/blueButton"
        android:layout_alignEnd="@+id/blueButton"
        android:src="@drawable/widget_background_yellow_xs"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orangeButton"
        android:layout_alignTop="@+id/yellowButton"
        android:layout_alignLeft="@+id/redButton"
        android:layout_alignStart="@+id/redButton"
        android:src="@drawable/widget_background_orange_xs"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purpleButton"
        android:layout_below="@+id/yellowButton"
        android:layout_alignRight="@+id/yellowButton"
        android:layout_alignEnd="@+id/yellowButton"
        android:layout_marginTop="50dp"
        android:src="@drawable/widget_background_purple_xs"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greenButton"
        android:layout_alignTop="@+id/purpleButton"
        android:layout_alignLeft="@+id/orangeButton"
        android:layout_alignStart="@+id/orangeButton"
        android:src="@drawable/widget_background_green_xs"/>
</RelativeLayout>
